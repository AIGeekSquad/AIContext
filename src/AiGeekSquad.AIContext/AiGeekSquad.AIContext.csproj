<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IsPackable>true</IsPackable>
    
    <!-- NuGet Package Metadata -->
    <PackageId>AiGeekSquad.AIContext</PackageId>
    <Version>1.0.0</Version>
    <Description>A comprehensive toolkit for .NET and C# developers working with AI applications. This library provides essential tools and algorithms for processing, transforming, and optimizing AI context, including functionality for reranking, parsing, chunking, and intelligent document selection. Features high-performance implementations of algorithms like Maximum Marginal Relevance (MMR) for balancing relevance and diversity in search results, making it ideal for AI applications, information retrieval systems, and content recommendation engines.</Description>
    <Authors>AiGeekSquad</Authors>
    <Copyright>Copyright © AiGeekSquad 2025</Copyright>
    <RepositoryUrl>https://github.com/AiGeekSquad/AIContext</RepositoryUrl>
    <PackageTags>ai;nlp;search;relevance;diversity;mmr;maximum-marginal-relevance;information-retrieval;recommendation</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Title>Tools to help C# developer with AI Context processing</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>aicontext128.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
    <PackageReference Include="Microsoft.ML.Tokenizers" Version="1.0.2" />
    <PackageReference Include="Microsoft.ML.Tokenizers.Data.Cl100kBase" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Chunking\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\aicontext128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
